{
  "manifest_version": 3,

  "name": "Volcano",
  "description": "Volcano, Chatgpt",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
